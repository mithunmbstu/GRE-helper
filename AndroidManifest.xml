            android:name="com.example.grehelper.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.grehelper.Swipe_Tab_Main"
            android:label="@string/title_activity_swipe__tab__main" >
        </activity>
        <activity
            android:name="com.example.grehelper.Word_Details"
            android:label="@string/title_activity_word__details" >
