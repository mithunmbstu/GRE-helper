<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B0BEC5"
    android:gravity="top"
    android:orientation="vertical" >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.06"
        android:gravity="center"
        android:orientation="vertical" >
		
		<TextView
		    android:id="@+id/textView1"
		    android:layout_width="316dp"
		    android:layout_height="wrap_content"
		    android:text="GOAL"
		    android:gravity="center"
		    android:textAppearance="?android:attr/textAppearanceMedium"
		    android:textColor="#9C27B0"
		    android:textStyle="bold" />
        
        <TextView
        	android:id="@+id/textView1"
        	android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:text="This app helps you to learn new words."
        	android:gravity="center"
        	android:textAppearance="?android:attr/textAppearanceSmall"
        	android:textColor="#FF9100" />
        
        
        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GUIDELINE"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#9C27B0"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-:> Select Add Word tab to insert new word with synonym and antonym."
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#FF9100" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-:> Select to Words tab to see the words you inserted."
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#FF9100" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-:> Clicking on words you can test your memory."
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#FF9100" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-:> You can update,delete and listen word details."
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#FF9100" />
        
         <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DEVELOPERS"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#9C27B0"
            android:textStyle="bold" />
         
         <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="REDOY AHMED , TANVIR HASAN PIAS, WS AYAN"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#FF9100" />
    </LinearLayout>

</LinearLayout>